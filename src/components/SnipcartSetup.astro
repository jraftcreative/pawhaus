---
const snipcartApiKey = import.meta.env.PUBLIC_SNIPCART_API_KEY;
---

<link rel="preconnect" href="https://cdn.snipcart.com" />
<link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.7.1/default/snipcart.css" />
<script is:inline src="https://cdn.snipcart.com/themes/v3.7.1/default/snipcart.js" defer></script>

<div
  id="snipcart"
  data-api-key={snipcartApiKey}
  data-config-modal-style="side"
  data-currency="sgd"
  hidden
></div>
