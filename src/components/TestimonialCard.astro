---
interface Props {
  name: string;
  pet: string;
  text: string;
  rating: number;
}

const { name, pet, text, rating } = Astro.props;
---

<div class="bg-white rounded-2xl p-6 shadow-sm">
  <div class="flex gap-1 mb-3">
    {Array.from({ length: 5 }).map((_, i) => (
      <svg
        class:list={['h-5 w-5', i < rating ? 'text-dog-amber' : 'text-gray-light']}
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>
  <p class="text-charcoal-light text-sm leading-relaxed italic">"{text}"</p>
  <div class="mt-4 flex items-center gap-2">
    <div class="h-8 w-8 bg-coral/10 rounded-full flex items-center justify-center">
      <span class="text-sm">{pet.includes('cat') || pet.includes('Cat') ? 'ğŸ±' : 'ğŸ¶'}</span>
    </div>
    <div>
      <p class="text-sm font-semibold text-charcoal">{name}</p>
      <p class="text-xs text-charcoal-light">{pet}</p>
    </div>
  </div>
</div>
