---
import { url } from '../utils/base';
---

<section class="relative overflow-hidden bg-gradient-to-br from-cream to-cream-dark">
  <div class="container-max py-16 md:py-24">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <!-- Text -->
      <div class="text-center md:text-left">
        <span class="inline-block bg-coral/10 text-coral text-sm font-semibold px-4 py-1.5 rounded-full mb-4">
          New arrivals for your fur babies ğŸ‰
        </span>
        <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold text-charcoal leading-tight">
          Happy Pets,
          <br />
          <span class="text-coral">Happy Life</span>
        </h1>
        <p class="text-charcoal-light text-lg mt-4 max-w-lg mx-auto md:mx-0">
          Premium accessories for cats &amp; dogs, delivered to your door in Singapore.
          Curated with love, priced with care.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 mt-8 justify-center md:justify-start">
          <a
            href={url('/shop/')}
            class="inline-flex items-center justify-center gap-2 bg-coral hover:bg-coral-dark text-white font-semibold py-3 px-8 rounded-full transition-all duration-200 hover:shadow-lg"
          >
            Shop Now
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href={url('/cats/')}
            class="inline-flex items-center justify-center gap-2 bg-white hover:bg-cream text-charcoal font-semibold py-3 px-8 rounded-full border border-gray-light transition-all duration-200"
          >
            ğŸ± Cats
          </a>
          <a
            href={url('/dogs/')}
            class="inline-flex items-center justify-center gap-2 bg-white hover:bg-cream text-charcoal font-semibold py-3 px-8 rounded-full border border-gray-light transition-all duration-200"
          >
            ğŸ¶ Dogs
          </a>
        </div>
      </div>

      <!-- Hero visual -->
      <div class="hidden md:flex items-center justify-center">
        <div class="relative w-96 h-96">
          <!-- Cat image -->
          <div class="absolute top-0 left-0 w-64 h-64 rounded-2xl overflow-hidden shadow-lg rotate-[-3deg] z-10">
            <img src={url('/images/hero-cat.jpg')} alt="Happy cat" class="w-full h-full object-cover" />
          </div>
          <!-- Dog image -->
          <div class="absolute bottom-0 right-0 w-64 h-64 rounded-2xl overflow-hidden shadow-lg rotate-[3deg]">
            <img src={url('/images/hero-dog.jpg')} alt="Happy dog" class="w-full h-full object-cover" />
          </div>
          <!-- Floating badges -->
          <div class="absolute top-2 right-2 bg-white rounded-xl shadow-md px-3 py-2 animate-bounce z-20">
            <span class="text-sm font-semibold">ğŸ± Cats</span>
          </div>
          <div class="absolute bottom-2 left-2 bg-white rounded-xl shadow-md px-3 py-2 animate-bounce z-20" style="animation-delay: 0.5s">
            <span class="text-sm font-semibold">ğŸ¶ Dogs</span>
          </div>
          <div class="absolute bottom-16 right-0 bg-coral text-white rounded-xl shadow-md px-3 py-2 z-20">
            <span class="text-sm font-bold">Free Shipping</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Wave divider -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
      <path d="M0 60V30C240 0 480 0 720 30C960 60 1200 60 1440 30V60H0Z" fill="#FFFBF7" />
    </svg>
  </div>
</section>
