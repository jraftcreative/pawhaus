---
import { url } from '../utils/base';

interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
  accentColor: 'purple' | 'amber';
  productCount: number;
}

const { title, description, href, image, accentColor, productCount } = Astro.props;
---

<a
  href={href}
  class="group relative rounded-2xl overflow-hidden transition-all duration-300 hover:shadow-lg block"
>
  <!-- Background image -->
  <div class="aspect-[4/3] overflow-hidden">
    <img
      src={url(image)}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      loading="lazy"
    />
  </div>
  <!-- Overlay -->
  <div
    class:list={[
      'absolute inset-0 flex flex-col items-center justify-end p-6 text-center',
      accentColor === 'purple' ? 'bg-gradient-to-t from-cat-purple/80 to-transparent' : 'bg-gradient-to-t from-dog-amber/80 to-transparent',
    ]}
  >
    <h3 class="font-display text-2xl font-bold text-white mb-1">{title}</h3>
    <p class="text-sm text-white/90 mb-2">{description}</p>
    <span class="text-sm font-semibold text-white bg-white/20 px-3 py-1 rounded-full">
      {productCount} products â†’
    </span>
  </div>
</a>
