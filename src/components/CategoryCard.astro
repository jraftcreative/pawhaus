---
interface Props {
  title: string;
  description: string;
  href: string;
  emoji: string;
  accentColor: 'purple' | 'amber';
  productCount: number;
}

const { title, description, href, emoji, accentColor, productCount } = Astro.props;
---

<a
  href={href}
  class:list={[
    'group relative rounded-2xl p-8 overflow-hidden transition-all duration-300 hover:shadow-lg flex flex-col items-center text-center',
    accentColor === 'purple' ? 'bg-cat-purple-light hover:bg-cat-purple/15' : 'bg-dog-amber-light hover:bg-dog-amber/15',
  ]}
>
  <span class="text-5xl mb-4 group-hover:scale-110 transition-transform duration-300">{emoji}</span>
  <h3 class="font-display text-xl font-bold text-charcoal mb-2">{title}</h3>
  <p class="text-sm text-charcoal-light mb-3">{description}</p>
  <span
    class:list={[
      'text-sm font-semibold',
      accentColor === 'purple' ? 'text-cat-purple' : 'text-dog-amber',
    ]}
  >
    {productCount} products â†’
  </span>
</a>
