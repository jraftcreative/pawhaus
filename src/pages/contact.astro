---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { url } from '../utils/base';
---

<Layout
  title="Contact Us â€” PawHaus"
  description="Get in touch with PawHaus. We'd love to hear from you! Reach us via email, WhatsApp, or our contact form."
>
  <Breadcrumb items={[{ label: 'Contact Us' }]} />

  <section class="container-max pb-16 max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <span class="text-5xl mb-4 block">ğŸ’¬</span>
      <h1 class="font-display text-3xl md:text-4xl font-bold text-charcoal">Contact Us</h1>
      <p class="text-charcoal-light mt-3">We'd love to hear from you! Reach out anytime.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div class="bg-white rounded-2xl p-6 md:p-8 shadow-sm">
        <h2 class="font-display text-xl font-bold text-charcoal mb-6">Send us a message</h2>
        <form class="space-y-4" name="contact" data-astro-reload>
          <div>
            <label for="name" class="block text-sm font-medium text-charcoal mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2.5 rounded-lg border border-gray-light bg-cream text-charcoal placeholder:text-gray-warm focus:outline-none focus:ring-2 focus:ring-coral/50 focus:border-coral"
              placeholder="Your name"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-charcoal mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2.5 rounded-lg border border-gray-light bg-cream text-charcoal placeholder:text-gray-warm focus:outline-none focus:ring-2 focus:ring-coral/50 focus:border-coral"
              placeholder="your@email.com"
            />
          </div>
          <div>
            <label for="subject" class="block text-sm font-medium text-charcoal mb-1">Subject</label>
            <select
              id="subject"
              name="subject"
              class="w-full px-4 py-2.5 rounded-lg border border-gray-light bg-cream text-charcoal focus:outline-none focus:ring-2 focus:ring-coral/50 focus:border-coral"
            >
              <option value="general">General Enquiry</option>
              <option value="order">Order Status</option>
              <option value="returns">Returns & Refunds</option>
              <option value="products">Product Question</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-charcoal mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-2.5 rounded-lg border border-gray-light bg-cream text-charcoal placeholder:text-gray-warm focus:outline-none focus:ring-2 focus:ring-coral/50 focus:border-coral resize-none"
              placeholder="How can we help?"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-coral hover:bg-coral-dark text-white font-semibold py-3 px-6 rounded-full transition-colors cursor-pointer"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="space-y-6">
        <div class="bg-white rounded-2xl p-6 shadow-sm">
          <h2 class="font-display text-xl font-bold text-charcoal mb-4">Other ways to reach us</h2>
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <span class="text-xl">ğŸ“§</span>
              <div>
                <p class="font-semibold text-charcoal text-sm">Email</p>
                <a href="mailto:hello@pawhaus.com" class="text-coral hover:underline text-sm">hello@pawhaus.com</a>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-xl">ğŸ’¬</span>
              <div>
                <p class="font-semibold text-charcoal text-sm">WhatsApp</p>
                <a href="https://wa.me/6591234567" class="text-coral hover:underline text-sm" target="_blank" rel="noopener noreferrer">+65 9123 4567</a>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-xl">ğŸ•</span>
              <div>
                <p class="font-semibold text-charcoal text-sm">Response Time</p>
                <p class="text-charcoal-light text-sm">We typically reply within 24 hours</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-coral/5 rounded-2xl p-6">
          <h3 class="font-display font-semibold text-charcoal mb-2">Before you reach out</h3>
          <p class="text-sm text-charcoal-light mb-3">
            Many common questions are answered in our FAQ section.
          </p>
          <a
            href={url('/faq/')}
            class="inline-flex items-center gap-2 text-coral font-semibold text-sm hover:underline"
          >
            Visit FAQ
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
