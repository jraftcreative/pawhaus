---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import ProductButton from '../../components/ProductButton.astro';
import ProductCard from '../../components/ProductCard.astro';
import { getCollection } from 'astro:content';
import { url } from '../../utils/base';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map((product) => ({
    params: { id: product.data.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const { name, slug, price, comparePrice, image, imageAlt, description, shortDescription, features, category, tags, weight, gallery } = product.data;

const discount = comparePrice ? Math.round((1 - price / comparePrice) * 100) : 0;
const categoryLabel = category === 'cats' ? 'Cat Accessories' : 'Dog Accessories';
const categoryHref = category === 'cats' ? url('/cats/') : url('/dogs/');

// Related products: same category, excluding current
const allProducts = await getCollection('products');
const related = allProducts
  .filter((p) => p.data.category === category && p.data.slug !== slug)
  .slice(0, 4);
---

<Layout
  title={`${name} â€” PawHaus`}
  description={shortDescription}
  ogImage={image}
>
  <Breadcrumb
    items={[
      { label: categoryLabel, href: categoryHref },
      { label: name },
    ]}
  />

  <section class="container-max pb-16">
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      <!-- Image -->
      <div class="relative">
        <div class="bg-cream rounded-2xl overflow-hidden aspect-square">
          <img
            id="main-product-image"
            src={url(image)}
            alt={imageAlt}
            class="w-full h-full object-cover"
          />
        </div>
        {discount > 0 && (
          <span class="absolute top-4 left-4 bg-coral text-white text-sm font-bold px-3 py-1.5 rounded-full">
            Save {discount}%
          </span>
        )}
        {/* Gallery thumbnails */}
        {gallery && gallery.length > 1 && (
          <div class="flex gap-2 mt-3">
            {gallery.map((img, i) => (
              <button
                class:list={[
                  'gallery-thumb w-16 h-16 md:w-20 md:h-20 rounded-lg overflow-hidden border-2 cursor-pointer transition-all',
                  i === 0 ? 'border-coral' : 'border-transparent hover:border-gray-warm',
                ]}
                data-src={url(img)}
              >
                <img src={url(img)} alt={`${name} view ${i + 1}`} class="w-full h-full object-cover" loading="lazy" />
              </button>
            ))}
          </div>
        )}
      </div>

      <!-- Details -->
      <div class="flex flex-col">
        <span
          class:list={[
            'inline-flex items-center gap-1 text-sm font-semibold px-3 py-1 rounded-full w-fit mb-3',
            category === 'cats' ? 'bg-cat-purple-light text-cat-purple' : 'bg-dog-amber-light text-dog-amber',
          ]}
        >
          {category === 'cats' ? 'ğŸ± Cats' : 'ğŸ¶ Dogs'}
        </span>

        <h1 class="font-display text-2xl md:text-3xl font-bold text-charcoal">{name}</h1>

        <div class="flex items-center gap-3 mt-3">
          <span class="text-2xl font-bold text-coral">S${price.toFixed(2)}</span>
          {comparePrice && (
            <span class="text-lg text-gray-warm line-through">S${comparePrice.toFixed(2)}</span>
          )}
          {discount > 0 && (
            <span class="bg-coral/10 text-coral text-sm font-semibold px-2 py-0.5 rounded">
              -{discount}%
            </span>
          )}
        </div>

        <p class="text-charcoal-light mt-4 leading-relaxed">{description}</p>

        <!-- Features -->
        <div class="mt-6">
          <h2 class="font-display font-semibold text-charcoal mb-3">Features</h2>
          <ul class="space-y-2">
            {features.map((feature) => (
              <li class="flex items-start gap-2 text-sm text-charcoal-light">
                <svg class="h-5 w-5 text-success shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mt-6">
          {tags.map((tag) => (
            <span class="text-xs bg-cream-dark text-charcoal-light px-3 py-1 rounded-full">
              {tag}
            </span>
          ))}
        </div>

        <!-- Add to Cart -->
        <div class="mt-8">
          <ProductButton
            id={slug}
            name={name}
            price={price}
            image={image}
            description={shortDescription}
            url={url(`/products/${slug}/`)}
            weight={weight}
            class="w-full sm:w-auto text-lg py-4 px-10"
          />
        </div>

        <!-- Trust signals -->
        <div class="grid grid-cols-3 gap-4 mt-8 pt-6 border-t border-gray-light">
          <div class="text-center">
            <span class="text-xl block mb-1">ğŸšš</span>
            <p class="text-xs text-charcoal-light">Free shipping over S$50</p>
          </div>
          <div class="text-center">
            <span class="text-xl block mb-1">ğŸ”’</span>
            <p class="text-xs text-charcoal-light">Secure checkout</p>
          </div>
          <div class="text-center">
            <span class="text-xl block mb-1">ğŸ˜Š</span>
            <p class="text-xs text-charcoal-light">30-day returns</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Products -->
    {related.length > 0 && (
      <div class="mt-16">
        <h2 class="font-display text-2xl font-bold text-charcoal mb-6">You Might Also Like</h2>
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
          {related.map((p) => (
            <ProductCard
              slug={p.data.slug}
              name={p.data.name}
              price={p.data.price}
              comparePrice={p.data.comparePrice}
              image={p.data.image}
              imageAlt={p.data.imageAlt}
              shortDescription={p.data.shortDescription}
              category={p.data.category}
            />
          ))}
        </div>
      </div>
    )}
  </section>
</Layout>

<script>
  const thumbs = document.querySelectorAll('.gallery-thumb');
  const mainImg = document.getElementById('main-product-image') as HTMLImageElement;

  thumbs.forEach((thumb) => {
    thumb.addEventListener('click', () => {
      const src = thumb.getAttribute('data-src');
      if (src && mainImg) {
        mainImg.src = src;
        thumbs.forEach((t) => {
          t.classList.remove('border-coral');
          t.classList.add('border-transparent');
        });
        thumb.classList.remove('border-transparent');
        thumb.classList.add('border-coral');
      }
    });
  });
</script>
